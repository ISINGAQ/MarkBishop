<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:startColor = "#Cf6150"
                android:centerColor = "#EDD4BE"
                android:endColor = "#74ACB1"
                android:angle = "315"
                android:type = "linear" />
            <size android:width="50dp"
                android:height="50dp"/>
            <corners
                android:bottomRightRadius="6dp"
                android:bottomLeftRadius="6dp"
                android:topLeftRadius="6dp"
                android:topRightRadius="6dp"/>

        </shape>
    </item>


    <item
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">
        <shape android:shape="rectangle" >
            <solid android:color="#fff" />
            <padding
                android:left="7dp"
                android:right="7dp"
                />
        </shape>

    </item>
</layer-list>