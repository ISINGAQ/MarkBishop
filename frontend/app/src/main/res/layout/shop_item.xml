<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="16dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shopTitleTextView"
                android:layout_width="180dp"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:text="Example"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/shopContentTextView"
                android:layout_width="200dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/shopCostTextView"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_italic"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"
                android:textSize="14dp"
                android:text="Example" />
        </LinearLayout>
        <View
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="1" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:padding="5dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:id="@+id/shopImageView">

            </ImageView>
            <Button
                android:id="@+id/shopPurchase"
                android:layout_width="135dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:text="Недостаточно средств"
                android:background="@drawable/event_button_bg"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>